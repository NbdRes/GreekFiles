# Load required libraries.
library(readr)
library(stringr)
library(dplyr)
library(writexl)
library(tcltk)

# Function to read file and count word frequencies
count_word_frequencies <- function(file_path) {
  # Read the text file
  text <- read_file(file_path)
  
  # Convert to lowercase and remove punctuation
  text <- tolower(text)
  text <- str_replace_all(text, "[[:punct:]]", "")
  
  # Split into words
  words <- str_split(text, "\\s+")[[1]]
  
  # Count word frequencies
  word_freq <- table(words)
  
  # Calculate total number of words
  total_words <- sum(word_freq)
  
  # Convert to data frame, calculate normalized frequency, and sort
  word_freq_df <- data.frame(
    word = names(word_freq),
    frequency = as.numeric(word_freq),
    normalized_frequency = as.numeric(word_freq) / total_words
  )
  word_freq_df <- word_freq_df[order(-word_freq_df$frequency), ]
  
  return(word_freq_df)
}

# Main program
main <- function() {
  # Open folder dialog for selecting input folder
  input_folder <- tclvalue(tkchooseDirectory(title = "Select folder containing text files"))
  
  if (nchar(input_folder) == 0) {
    cat("No folder selected. Exiting program.\n")
    return()
  }
  
  # Get all text files in the folder
  txt_files <- list.files(input_folder, pattern = "*.txt", full.names = TRUE)
  
  if (length(txt_files) == 0) {
    cat("No text files found in the selected folder. Exiting program.\n")
    return()
  }
  
  # Process each file and store results in a list
  results <- list()
  for (file in txt_files) {
    file_name <- basename(file)
    word_freq_df <- count_word_frequencies(file)
    results[[file_name]] <- word_freq_df
  }
  
  # Combine results into a single data frame
  combined_results <- Reduce(function(x, y) full_join(x, y, by = "word"), results)
  
  # Rename columns to match file names
  colnames(combined_results)[-1] <- paste0(rep(c("frequency_", "normalized_frequency_"), length(results)), 
                                           rep(names(results), each = 2))
  
  # Sort by the sum of frequencies across all files
  combined_results <- combined_results %>%
    mutate(total_frequency = rowSums(select(., starts_with("frequency_")), na.rm = TRUE)) %>%
    arrange(desc(total_frequency)) %>%
    select(-total_frequency)
  
  # Open file dialog for saving Excel file
  output_file <- tclvalue(tkgetSaveFile(
    defaultextension = ".xlsx",
    filetypes = "{{Excel Files} {.xlsx}}",
    title = "Save Excel file"
  ))
  
  if (nchar(output_file) == 0) {
    cat("No save location selected. Exiting program.\n")
    return()
  }
  
  # Write to Excel file
  write_xlsx(combined_results, output_file)
  
  cat("Word frequencies for all files have been saved to", output_file, "\n")
}

# Run the main program
main()
